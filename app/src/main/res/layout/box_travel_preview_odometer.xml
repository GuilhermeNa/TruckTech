<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layout">

    <TextView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:id="@+id/box_travel_preview_initial_measure"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_width="match_parent"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/icon_start"
        tools:text="100.000 - km" />

    <TextView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:id="@+id/box_travel_preview_final_measure"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_width="match_parent"
        android:padding="8dp"
        tools:text="101.050 - km"
        app:drawableEndCompat="@drawable/icon_end" />

</LinearLayout>