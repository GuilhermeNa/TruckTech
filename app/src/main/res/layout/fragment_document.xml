    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_document_toolbar"
        layout="@layout/layout_toolbar"/>

    <com.ortiz.touchview.TouchImageView
